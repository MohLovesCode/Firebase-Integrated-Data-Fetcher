<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:orientation="vertical">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/userDetailsProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/profilePictureUserDetailsImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            tools:src="@color/placeholderColor"
            android:contentDescription="@string/user_profile_description" />

        <TextView
            android:id="@+id/fullNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Carolina H. Doyle"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="150 Carter Street"/>

        <TextView
            android:id="@+id/postalAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Manchester, CT 06040"
            android:layout_marginBottom="20dp"/>

